<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
    namespace:命名空间，相当于包名
    #{}：相当于占位符
-->
<mapper namespace="com.zf.mapper.SeedingMapper">


    <select id="getAll" resultType="com.zf.pojo.Seeding">
        select * from `sending`
    </select>

    <select id="get" parameterType="int" resultType="com.zf.pojo.Seeding">
        select * from `sending` where id=#{id}
    </select>

    <insert id="insert" parameterType="com.zf.pojo.Seeding">
        insert into `sending` (`name`) values (#{name})
    </insert>

    <delete id="delete" parameterType="int">
        delete from `sending` where id=#{id}
    </delete>

    <update id="update" parameterType="com.zf.pojo.Seeding">
        update `sending` set
                                      name=#{name}
        where id=#{id}
    </update>


</mapper>